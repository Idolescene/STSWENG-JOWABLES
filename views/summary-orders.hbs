<div class="container-fluid">
  <div class="summary-orders-section">
    <br><br>
    <div class="container-fluid">
      <div class="row summary-finances-title">
        <div class="col-2">
          <h4>{{title}}</h4>
        </div>
        <div class="col-8 d-flex flex-row">
          <div class="p-2">
            <h5>From:</h5>
          </div>
          <div class="p-2">
            <input class="form-control rounded-pill date-range" type="date" id="from-date-range" name="from-date-range">
          </div>
          <div class="p-2">
            <h5>To:</h5>
          </div>
          <div class="p-2">
            <input class="form-control rounded-pill date-range" type="date" id="to-date-range" name="to-date-range">
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="container-fluid">
      <div class="summary-finances-div">
        <table class="table table-borderless text-center summary-finances">
          <thead>
            <tr>
              <th scope="col">Total Capital</th>
              <th scope="col">Net Income</th>
              <th scope="col">Revenue</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>
                <h2>&#8369; {{capital}}</h2>
              </th>
              <td>
                <h2>&#8369; {{income}}</h2>
              </td>
              <td>
                <h2>&#8369; {{revenue}}</h2>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="container-fluid">
      <div class="all-orders-div">
        <br>
        <h4>All Orders</h4>
        <br>
        <div id="wrapper">
          <table class="table table-borderless text-center table-hover all-orders" id="table-detail">
            <thead>
              <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Customer</th>
                <th scope="col">Order Date</th>
                <th scope="col">Total</th>
                <th scope="col">Status</th>
                <th scope="col">View Details</th>
              </tr>
            </thead>
            <tbody>
              {{#if orders}}
              {{#each orders}}
              <tr>
                <td>{{this.id}}</td>
                <td>{{this.fullname}}</td>
                <td>{{this.date}}</td>
                <td>&#8369; {{this.totalPrice}}</td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-secondary rounded-pill dropdown-toggle order-status-button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Processing
                    </button>
                    <div class="dropdown-menu drop-menu" id="order-status" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="#">Payment Received</a>
                      <a class="dropdown-item" href="#">Shipped</a>
                      <a class="dropdown-item" href="#">Delivered</a>
                    </div>
                  </div>
                </td>
                <td>
                  <i class="fa fa-angle-down" aria-hidden="true" style="font-size: 24px;" onclick="showHideDetails('hidden-row1');"></i>
                </td>
              </tr>
              <tr class="hidden-row" id="hidden-row1">
                <td colspan="6" class="text-center">

                  <div class="container">
                    <table class="table text-left table-borderless" id="hidden-dropdown">
                      <thead>
                        <th scope="col">Product</th>
                        <th scope="col">Size</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                      </thead>
                      <tbody>
                        {{#each this.products}}
                        <tr>
                            <td class="d-flex checkout-img-name">
                              <img src=".{{this.img}}" width="150px">
                              <p>{{this.name}}</p>
                            </td>
                            <td>{{this.size}}</td>
                            <td>â‚± {{this.price}}</td>
                            <td>{{this.qty}}</td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                    <div class="container">
                      <div class="row">
                        <div class="col-8 text-left">
                          <button class="btn cancel-btn rounded-pill"><b>Cancel</b></button>
                        </div>
                        <div class="col-4 text-right">
                          <div class="row">
                            <div class="col">Total</div>
                            <div class="col">{{this.totalPrice}}</div>
                          </div>
                          <div class="row">
                            <div class="col">Shipping Fee</div>
                            <div class="col">+50</div>
                          </div>
                          <div class="row">
                            <div class="col">
                              <h4>Total Amount</h4>
                            </div>
                            <div class="col">
                              <h4>{{this.totalWithShipping}}</h4>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                </td>
              </tr>
              {{else}}
              <tr><td>There are no orders available.</td></tr>
              {{/each}}
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  function showHideDetails(row) {
      $("#" + row).toggle();
  }
</script>
