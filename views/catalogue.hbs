<div class="container-fluid">
  <br><br>
  <section class="catalogue-section">
    <div class="row">
      <!-- Sidebar -->
      <div class="catalogue-sidebar col-sm-3">
        <h5>Categories</h5>
        <ul class="list-group-flush w-75">
          <li class="list-group-item">
            <div class = 'form-check'>
              <input class = 'form-check-input categoryRadio' name = 'categoryRadio' type = 'radio' value = 'No Filter' id = 'noFilterRadio' >
              <label for = 'noFilterRadio' class = 'form-check-label categoryRadio' value = 'Erase Filter'>All Items</label>
            </div>
          </li>
          {{#each categories}}
          <li class="list-group-item">
            <div class = 'form-check'>
            <input class = 'form-check-input categoryRadio' name = 'categoryRadio' type = 'radio' value = '{{this}}' id = '{{this}}Radio' >
            <label for = '{{this}}Radio' class = 'form-check-label'>{{this}}</label>
            </div>
          </li>
          {{/each}}
        </ul>
        <br><br>
        <h5>Filter By</h5>
        <ul class="list-group-flush w-75">
          <li class="list-group-item">
            <div class = 'form-check'>
              <input class = 'form-check-input sizeRadio' name = 'sizeRadio' type = 'radio' value = 'No Filter' id = 'sizeFilterRadio' >
              <label for = 'sizeFilterRadio' class = 'form-check-label categoryRadio' value = 'Erase Filter'>All Items</label>
            </div>
          </li>
          {{#each size}}
          <li class="list-group-item">
            <div class = 'form-check'>
            <input class = 'form-check-input sizeRadio' name = 'sizeRadio' type = 'radio' value = '{{this}}' id = '{{this}}sizeRadio' >
            <label for = '{{this}}sizeRadio' class = 'form-check-label'>{{this}}</label>
            </div>
          </li>
          {{/each}}
        </ul>
      </div><!-- End -->

      <!-- Display Products -->
      <div class="display-catalogue-div display-items col-sm-8">
      {{>display-products}}
      </div>
    </div>
  </section>
  <br><br>
</div>
<script>
function changedRadio() { 
  $.post('/catalogue/', {
    category: $('input[name="categoryRadio"]:checked').val(),
    size: $('input[name="sizeRadio"]:checked').val()
  }, function(result){
    $(".display-items").html(result);
  });
}

$(function() {
  $("#noFilterRadio").prop("checked", true);
  $('#sizeFilterRadio').prop("checked",true);

  $(".categoryRadio").on("change", changedRadio);
  $('.sizeRadio').on("change", changedRadio);
});
</script>