<div class="dropdown">
  <i id="nav-carticon" class="fa fa-shopping-cart fa-lg shopping-cart-icon-loggedin navbar-cart" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
  <div class="dropdown-menu cart-drop-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
      {{#if cartProducts}}
        {{#each cartProducts}}
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>
                <img src="/{{this.img}}" style="max-width: 100px;">
              </td>
              <td>
                {{this.name}}
                <p>{{this.size}}</p>
              </td>
              <td>
                {{> out-of-stock}}
              </td>
              <td>
                {{this.qty}}
              </td>
              <td>
                â‚± <span>{{this.subPrice}}</span>
              </td>
            </tr>
          </tbody>
        </table>
        {{/each}}
      {{else}}
      <p>Your cart is empty :(</p>
      {{/if}}
    <div class="checkout-button text-right">
      <a href="/checkout" type="button" class="btn rounded-pill" id="editcart-btn">Edit Cart</a>
    </div>
  </div>
</div>
