<div class="dropdown">
  <i class="fa fa-shopping-cart fa-lg navbar-cart" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
  <div class="dropdown-menu cart-drop-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
      {{#if cartProducts}}
        {{#each cartProducts}}
        <a class="cart-item-dropdown dropdown-item" href="#" id="cartitem">
          <div id="test-id">
            {{test}}
          </div>
        <br>
          <div class="row cart-item-div" id="cart-item-div">
            <div class="col-sm-3 cart-image">
              <img src=".{{this.img}}" height="100px">
            </div>
            <div class="col-sm-8">
              <div class="row">
                <div class="col">
                  <p>{{this.name}}</p>
                  <div class="d-flex">
                    <div class="p-2">
                      <p>Medium</p>
                    </div>
                    {{>out-of-stock}}
                  </div>
                </div>
                <div class="col">
                  <p>{{qty}}</p>
                </div>
                <div class="col">
                  <p>&#8369; {{this.subPrice}}</p>
                </div>
                <div class="text-right">
                  <button class="btn">
                    <h1>X</h1>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      {{else}}
      <p>Your cart is empty :(</p>
      {{/if}}
    <div class="checkout-button text-right">
      <a href="/checkout" type="button" class="btn rounded-pill">Checkout</a>
    </div>
  </div>
</div>