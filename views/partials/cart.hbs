<div class="dropdown">
  <i class="fa fa-shopping-cart fa-lg navbar-cart" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
  <div class="dropdown-menu cart-drop-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
    <a class="cart-item-dropdown dropdown-item" href="#">
      <br>
      {{#if products}}
        <div class="row cart-item-div">
          <div class="col-sm-3 cart-image">
            <img src="{{img}}" height="100px">
          </div>
          <div class="col-sm-8">
            <div class="row">
              <div class="col">
                <p>{{name}}</p>
                <div class="d-flex">
                  <div class="p-2">
                    <p>{{size}}</p>
                  </div>
                  {{!-- <div class="p-2 out-of-stock text-danger">
                    <p class="border border-danger"><b>Out of Stock</b></p>
                  </div> --}}
                </div>
              </div>
              <div class="col">
                <p>{{qty}}</p>
              </div>
              <div class="col">
                <p>&#8369; {{price}}</p>
              </div>
              <div class="text-right">
                <button class="btn">
                  <h1>X</h1>
                </button>
              </div>
            </div>
          </div>
        </div>
      {{else}}
      <p>Your cart is empty :(</p>
      {{/if}}
    </a>
    <div class="checkout-button text-right">
      <a href="/checkout" type="button" class="btn rounded-pill">Checkout</a>
    </div>
  </div>
</div>